<!DOCTYPE html>
<html lang="en">

<%- include('../partials/head') %>
  </head>

  <body class="bg-gray-50">
    <%- include('../partials/nav') %>
      <main class="min-h-screen flex flex-col items-center justify-center px-4">
        <div class="w-full max-w-md">
          <!-- Main Card -->
          <div class="bg-white rounded-2xl shadow-2xl p-10">
            <!-- Header -->
            <div class="text-center mb-10">
              <h1 class="text-4xl font-bold text-blue-600 mb-2">Create Account</h1>
              <p class="text-gray-600 text-sm">Join Stayzy and start your adventure</p>
            </div>

            <form action="/signup" method="post" class="space-y-5">

              <!-- Error Messages -->
              <%- include('../partials/errors') %>

                <!-- First Name -->
                <div>
                  <input type="text" name="firstName" placeholder="First Name"
                    class="w-full px-4 py-3 border-2 border-gray-200 rounded-lg focus:outline-none focus:border-blue-500 focus:ring-2 focus:ring-blue-100 transition-all text-gray-800"
                    value="<%= oldInput.firstName ? oldInput.firstName : '' %>" required>
                </div>

                <!-- Last Name -->
                <div>
                  <input type="text" name="lastName" placeholder="Last Name"
                    class="w-full px-4 py-3 border-2 border-gray-200 rounded-lg focus:outline-none focus:border-blue-500 focus:ring-2 focus:ring-blue-100 transition-all text-gray-800"
                    value="<%= oldInput.lastName ? oldInput.lastName : '' %>">
                </div>

                <!-- Email -->
                <div>
                  <input type="email" name="email" placeholder="Email Address"
                    class="w-full px-4 py-3 border-2 border-gray-200 rounded-lg focus:outline-none focus:border-blue-500 focus:ring-2 focus:ring-blue-100 transition-all text-gray-800"
                    value="<%= oldInput.email ? oldInput.email : '' %>" required>
                </div>

                <!-- Password -->
                <div>
                  <input type="password" name="password" placeholder="Password"
                    class="w-full px-4 py-3 border-2 border-gray-200 rounded-lg focus:outline-none focus:border-blue-500 focus:ring-2 focus:ring-blue-100 transition-all text-gray-800"
                    required>
                </div>

                <!-- Confirm Password -->
                <div>
                  <input type="password" name="confirmPassword" placeholder="Confirm Password"
                    class="w-full px-4 py-3 border-2 border-gray-200 rounded-lg focus:outline-none focus:border-blue-500 focus:ring-2 focus:ring-blue-100 transition-all text-gray-800"
                    required>
                </div>

                <!-- User Type Selection -->
                <div class="pt-2 pb-4">
                  <p class="text-sm font-semibold text-gray-700 mb-3">I am a:</p>
                  <div class="flex gap-4">
                    <label class="flex items-center cursor-pointer">
                      <input type="radio" name="userType" value="guest"
                        class="w-5 h-5 text-blue-600 cursor-pointer accent-blue-600" <%=oldInput.userType==="guest"
                        ? "checked" : "" %> required>
                      <span class="text-gray-700 font-medium ml-2">Guest</span>
                    </label>
                    <label class="flex items-center cursor-pointer">
                      <input type="radio" name="userType" value="host"
                        class="w-5 h-5 text-blue-600 cursor-pointer accent-blue-600" <%=oldInput.userType==="host"
                        ? "checked" : "" %> required>
                      <span class="text-gray-700 font-medium ml-2">Host</span>
                    </label>
                  </div>
                </div>

                <!-- Terms Checkbox -->
                <div class="pt-2 pb-4">
                  <label class="flex items-start cursor-pointer">
                    <input type="checkbox" name="termsAccepted"
                      class="w-5 h-5 mt-0.5 text-blue-600 cursor-pointer accent-blue-600 flex-shrink-0 rounded"
                      required>
                    <span class="text-xs text-gray-700 ml-2">
                      I agree to the <a href="#" class="text-blue-600 font-semibold hover:underline">Terms of
                        Service</a>
                      and <a href="#" class="text-blue-600 font-semibold hover:underline">Privacy Policy</a>
                    </span>
                  </label>
                </div>

                <!-- Sign Up Button -->
                <button type="submit"
                  class="w-full px-6 py-3 bg-blue-600 text-white font-bold rounded-lg shadow-lg hover:bg-blue-700 transition-all transform hover:scale-105 active:scale-95 cursor-pointer text-base mt-8">
                  Register âž¨
                </button>
            </form>

            <!-- Sign In Link -->
            <p class="text-center text-gray-600 text-sm mt-6">
              Already have an account?
              <a href="/login" class="text-blue-600 font-bold hover:underline">Log In</a>
            </p>
          </div>
        </div>
      </main>
  </body>

</html>
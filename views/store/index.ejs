<%- include('../partials/head') %>
  </head>

  <body class="bg-gradient-to-br from-blue-100 via-white to-pink-100 min-h-screen flex flex-col">
    <%- include('../partials/nav') %>

      <main class="flex-1 flex flex-col items-center justify-center">

        <!-- Heading -->
        <div class="text-center max-w-4xl w-full px-6">
          <h1 class="text-red-700 text-5xl font-extrabold mb-4">Homes</h1>
          <p class="text-lg text-gray-600 mb-8">Fun, easy, and modern</p>
        </div>
        <!-- Card Grid -->
        <div class="w-full max-w-6xl px-6">
          <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
            <% data.forEach((homeReg)=>{ %>
              <div
                class="bg-gradient-to-r from-blue-50 to-pink-50 rounded-2xl shadow-lg overflow-hidden hover:shadow-2xl transition duration-300">

                <!-- Image -->
                <div class="h-56 w-full overflow-hidden">
                  <img src="<%= homeReg.photo %>" alt="<%= homeReg.homeName %>"
                    class="w-full h-full object-cover transform hover:scale-105 transition duration-300" />
                </div>

                <!-- Content -->
                <div class="p-6">
                  <div class="flex items-center justify-between">
                    <h2 class="text-xl font-bold text-gray-800 truncate">
                      <%= homeReg.homeName %>
                    </h2>
                    <span class="px-3 py-1 bg-green-100 text-green-700 rounded-full text-sm font-medium">
                      Active
                    </span>
                  </div>

                  <!-- Details -->
                  <div class="mt-4 space-y-2 text-gray-700">
                    <p><span class="font-semibold">üí∞ Price:</span> ‚Çπ<%= homeReg.pricePerNight %>/night</p>
                    <p><span class="font-semibold">üìç Location:</span>
                      <%= homeReg.location %>
                    </p>
                    <p><span class="font-semibold">‚≠ê Rating:</span>
                      <%= homeReg.rating %>/5
                    </p>
                  </div>

                  <!-- CTA -->
                  <div class="mt-6">
                    <button
                      class="w-full bg-blue-500 hover:bg-blue-600 text-white font-medium py-2 px-4 rounded-lg transition">
                      Book Now
                    </button>
                  </div>
                </div>
              </div>
              <% }) %>
          </div>
        </div>

        <!-- Add another home button -->
        <% if(isLoggedIn && user && user.userType==='host' ) { %>
          <div class="mt-10">
            <a href="/host/add-home"
              class="inline-block px-8 py-3 bg-pink-600 text-white rounded-xl shadow hover:bg-pink-700 transition font-bold">
              Add Another Home
            </a>
          </div>
          <% } %>

      </main>

      <footer class="bg-white py-6 mt-10 shadow-inner">
        <div class="container mx-auto text-center">
          <p class="text-gray-500 text-sm">&copy; 2025 Stayzy, Inc. All rights reserved.</p>
        </div>
      </footer>
  </body>

  </html>